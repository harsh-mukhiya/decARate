<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DemoGoogleSheet" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/golden_200</item>
        <item name="colorSecondaryVariant">@color/golden_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowAnimationStyle">@style/animaion</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="animaion">
        <item name="android:windowEnterAnimation">
            @android:anim/fade_in
        </item>
        <item name="android:windowExitAnimation">
            @android:anim/fade_out
        </item>
    </style>

    <style name="Theme.DemoGoogleSheet.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


    </style>
    <style name="Theme.MY" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/golden_200</item>
        <item name="colorSecondaryVariant">@color/golden_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowAnimationStyle">@style/animaion</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DemoGoogleSheet.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DemoGoogleSheet.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>